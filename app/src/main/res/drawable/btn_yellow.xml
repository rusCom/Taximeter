<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:drawable="@drawable/btn_pressed" android:state_pressed="true"/>
    <item android:drawable="@drawable/btn_not_enabled" android:state_enabled="false"/>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttons_corner" />
            <gradient
                android:angle="90"
                android:endColor="@color/primaryYellowDark"
                android:startColor="@color/primaryYellow"
                android:type="linear" />
            <stroke android:width="2dp" android:color="@color/primaryYellowDark" />
        </shape>
    </item>
</selector>