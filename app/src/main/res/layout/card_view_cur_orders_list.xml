<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/card_view_margin"
    android:paddingTop="@dimen/card_view_margin"
    android:paddingRight="@dimen/card_view_margin">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCurOrdersList"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llCurOrdersListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCurOrdersListDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/tvCurOrdersListPayType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/tvCurOrdersListPayPercent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/tvCurOrdersListCalcType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end|center"
                        android:lines="1"
                        android:maxLines="1"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tvCurOrdersListPriorInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_view_margin"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                app:drawableLeftCompat="@mipmap/ic_conformation_time" />


            <View style="@style/Divider" />


            <TextView
                android:id="@+id/tvCurOrdersListRouteFirstPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_view_margin"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                app:drawableLeftCompat="@mipmap/ic_conformation_pickup" />

            <View style="@style/Divider" />


            <TextView
                android:id="@+id/tvCurOrdersListRoutePoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_view_margin"
                android:singleLine="true"
                android:text="@string/tvCurOrdersListRoutePoint"
                android:textAppearance="?android:attr/textAppearanceLarge"
                app:drawableLeftCompat="@mipmap/ic_conformation_address" />


            <View style="@style/Divider" />

            <TextView
                android:id="@+id/tvCurOrdersListRouteLastPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_view_margin"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                app:drawableLeftCompat="@mipmap/ic_conformation_destination" />

            <View
                android:id="@+id/tvOrderNoteDivider"
                style="@style/Divider" />

            <TextView
                android:id="@+id/tvOrderNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_view_margin"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                app:drawableLeftCompat="@mipmap/ic_conformation_note" />

            <View
                android:id="@+id/tvDispatchingNameDivider"
                style="@style/Divider" />

            <TextView
                android:id="@+id/tvDispatchingName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_view_margin"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                app:drawableLeftCompat="@mipmap/ic_conformation_dispatching" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>