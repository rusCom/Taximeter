<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_margin">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/btnViewOrderApplyOrder"
        android:id="@+id/btnOrderMainAction"
        style="@style/MainButtonDisabled"
        android:enabled="true"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/tvOrderTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="!!!"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnOrderAction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:backgroundTint="@color/primaryRedDark"
        android:text="@string/btnViewOrderApplyOrder"
        style="@style/MainButton"
        tools:visibility="visible" />
</LinearLayout>