<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/card_view_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llHisOrderCaption">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tvHisOrderDate"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tvHisOrderStatus"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>
    <View style="@style/Divider"/>
    <TextView
        android:drawableLeft="@mipmap/ic_conformation_pickup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvHisOrderFirstRoutePoint"
        android:maxLines="1" />
    <View style="@style/Divider"/>
    <TextView
        android:drawableLeft="@mipmap/ic_conformation_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvHisOrderLastRoutePoint"
        android:maxLines="1" />
</LinearLayout>